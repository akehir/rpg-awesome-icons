{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@triangular/rpg-awesome-icons": [
        "dist/rpg-awesome-icons"
      ],
      "@triangular/rpg-awesome-icons/*": [
        "dist/rpg-awesome-icons/*"
      ]
    },
    "useDefineForClassFields": false
  }
}
